<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- ScrollView to hold the ConstraintLayout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/imageSlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <!-- First horizontal LinearLayout -->
            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:orientation="vertical"
                android:background="@drawable/border_white"
                app:layout_constraintEnd_toStartOf="@id/ll_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Roopay Wallet"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 0"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Second horizontal LinearLayout -->
            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:padding="4dp"
                android:gravity="center"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/ll_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="AEPS Wallet"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_topup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_payout"
               app:layout_constraintTop_toBottomOf="@id/ll_1">

                <ImageView
                    android:id="@+id/iv_topup"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_topup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Topup"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Second LinearLayout (Payout) -->
            <LinearLayout
                android:id="@+id/ll_payout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_1"
                app:layout_constraintStart_toEndOf="@id/ll_topup"
                app:layout_constraintEnd_toStartOf="@id/ll_qr_code"
                >

                <ImageView
                    android:id="@+id/iv_payout"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/deal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Payout"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Third LinearLayout (QR Code) -->
            <LinearLayout
                android:id="@+id/ll_qr_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_1"
                app:layout_constraintStart_toEndOf="@id/ll_payout"
                app:layout_constraintEnd_toStartOf="@id/ll_activate_service"
            >

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_qr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" My QR Code"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fourth LinearLayout (Activate Service) -->
            <LinearLayout
                android:id="@+id/ll_activate_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                app:layout_constraintStart_toEndOf="@id/ll_qr_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_qr_code"
                app:layout_constraintBottom_toBottomOf="@id/ll_qr_code"
            >

                <ImageView
                    android:id="@+id/iv_activate_service"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Activate Service"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Welcome To Roopay"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/ll_topup"
                android:layout_marginLeft="10dp"

                android:layout_marginBottom="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <com.library.slider.SliderView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="visible"
        app:sliderAnimationDuration="400"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="400"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="10dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/colorPrimary"
        app:sliderIndicatorUnselectedColor="#FAA5A4A4"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintBottom_toBottomOf="@id/card_view"
       />
    <androidx.cardview.widget.CardView
        android:id="@+id/bankingCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageSlider">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- TextView for Banking -->
            <TextView
                android:id="@+id/bankingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banking"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- First LinearLayout (Cash Withdrawal) -->
            <LinearLayout
                android:id="@+id/ll_cash_withdrawal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_mini_statement"
                app:layout_constraintTop_toBottomOf="@id/bankingTv">

                <ImageView
                    android:id="@+id/iv_cash_withdrawal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_cash_withdrawal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cash Withdrawal"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Second LinearLayout (Mini Statement) -->
            <LinearLayout
                android:id="@+id/ll_mini_statement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/bankingTv"
                app:layout_constraintStart_toEndOf="@id/ll_cash_withdrawal"
                app:layout_constraintEnd_toStartOf="@id/ll_balance_check">

                <ImageView
                    android:id="@+id/iv_mini_statement"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_mini_statement" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mini Statement"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Third LinearLayout (Balance Check) -->
            <LinearLayout
                android:id="@+id/ll_balance_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/bankingTv"
                app:layout_constraintStart_toEndOf="@id/ll_mini_statement"
                app:layout_constraintEnd_toStartOf="@id/ll_aadhar_pay">

                <ImageView
                    android:id="@+id/iv_balance_check"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_balance_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Balance Check"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fourth LinearLayout (Aadhar Pay) -->
            <LinearLayout
                android:id="@+id/ll_aadhar_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/ll_balance_check"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_balance_check"
                app:layout_constraintBottom_toBottomOf="@id/ll_balance_check">

                <ImageView
                    android:id="@+id/iv_aadhar_pay"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_aadhar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Aadhar Pay"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dmt_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_cash_withdrawal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_loans">

                <ImageView
                    android:id="@+id/iv_dmt_payment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_dmt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DMT Payment"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Sixth LinearLayout (Loans) -->
            <LinearLayout
                android:id="@+id/ll_loans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_mini_statement"
                app:layout_constraintStart_toEndOf="@id/ll_dmt_payment"
                app:layout_constraintEnd_toStartOf="@id/ll_axis_bank_ac_open">

                <ImageView
                    android:id="@+id/iv_loans"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_loan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Loans"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Seventh LinearLayout (Axis Bank Ac Open) -->
            <LinearLayout
                android:id="@+id/ll_axis_bank_ac_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_balance_check"
                app:layout_constraintStart_toEndOf="@id/ll_loans"
                app:layout_constraintEnd_toStartOf="@id/ll_matm">

                <ImageView
                    android:id="@+id/iv_axis_bank_ac_open"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_axix" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Axis Bank Ac Open"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Eighth LinearLayout (MATM) -->
            <LinearLayout
                android:id="@+id/ll_matm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_aadhar_pay"
                app:layout_constraintStart_toEndOf="@id/ll_axis_bank_ac_open"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_matm"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_matm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MATM"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/utilityCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/bankingCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextView for Utility -->
            <TextView
                android:id="@+id/utilityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utility"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- First LinearLayout (DTH Recharge) -->
            <LinearLayout
                android:id="@+id/ll_dth_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_mobile_recharge"
                app:layout_constraintTop_toBottomOf="@id/utilityTv">

                <ImageView
                    android:id="@+id/iv_dth_recharge"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_dth" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DTH Recharge"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Second LinearLayout (Mobile Recharge) -->
            <LinearLayout
                android:id="@+id/ll_mobile_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@id/ll_dth_recharge"
                app:layout_constraintEnd_toStartOf="@id/ll_lic"
                app:layout_constraintTop_toBottomOf="@id/utilityTv">

                <ImageView
                    android:id="@+id/iv_mobile_recharge"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_mobile_recharge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mobile Recharge"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Third LinearLayout (LIC) -->
            <LinearLayout
                android:id="@+id/ll_lic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/ll_mobile_recharge"
                app:layout_constraintStart_toEndOf="@id/ll_mobile_recharge"
                app:layout_constraintEnd_toStartOf="@id/ll_electricity">

                <ImageView
                    android:id="@+id/iv_lic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_lic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="LIC Payment"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fourth LinearLayout (Electricity) -->
            <LinearLayout
                android:id="@+id/ll_electricity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/ll_lic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_lic"
                app:layout_constraintBottom_toBottomOf="@id/ll_lic">

                <ImageView
                    android:id="@+id/iv_electricity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_electricity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Electricity"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fifth LinearLayout (Credit Card) -->
            <LinearLayout
                android:id="@+id/ll_credit_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_dth_recharge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_cctocc">

                <ImageView
                    android:id="@+id/iv_credit_card"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_credit_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Credit Card Payment"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Sixth LinearLayout (CCTOCC) -->
            <LinearLayout
                android:id="@+id/ll_cctocc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_mobile_recharge"
                app:layout_constraintStart_toEndOf="@id/ll_credit_card"
                app:layout_constraintEnd_toStartOf="@id/ll_manage_cash">

                <ImageView
                    android:id="@+id/iv_cctocc"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_credit_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CC to CC Payment"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Seventh LinearLayout (Manage Cash) -->
            <LinearLayout
                android:id="@+id/ll_manage_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_lic"
                app:layout_constraintStart_toEndOf="@id/ll_cctocc"
                app:layout_constraintEnd_toStartOf="@id/ll_pan_card">

                <ImageView
                    android:id="@+id/iv_manage_cash"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_manage_cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Manage Cash"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Eighth LinearLayout (PAN Card) -->
            <LinearLayout
                android:id="@+id/ll_pan_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_electricity"
                app:layout_constraintStart_toEndOf="@id/ll_manage_cash"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_pan_card"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_pan_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PAN Card Service"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
