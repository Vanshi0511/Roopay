<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"> <!-- Set the entire background to colorPrimary -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"> <!-- Set background of ScrollView to colorPrimary -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Profile Header -->


            <!-- Navigation Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:background="@color/colorPrimary"> <!-- Set background to colorPrimary -->

                <!-- Profile -->
                <TextView
                    android:id="@+id/nav_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Profile"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- KYC -->
                <TextView
                    android:id="@+id/nav_kyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="KYC"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_kyc"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- Support -->
                <TextView
                    android:id="@+id/nav_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Support"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_support"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- Settings -->
                <TextView
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_settings"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- My Language -->
                <TextView
                    android:id="@+id/nav_my_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="My Language"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_language"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- Terms & Condition -->
                <TextView
                    android:id="@+id/nav_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Terms &amp; Condition"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_terms"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- Privacy Policies -->
                <TextView
                    android:id="@+id/nav_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Privacy Policies"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_terms"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- FAQ -->
                <TextView
                    android:id="@+id/nav_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="FAQ"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_faq"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- Share / Refer with Friend -->
                <TextView
                    android:id="@+id/nav_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Share / Refer with Friend"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

                <!-- Logout -->
                <TextView
                    android:id="@+id/nav_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
